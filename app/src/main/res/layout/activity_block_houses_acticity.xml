<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnComplete"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            tools:context=".ui.addmedicines_activity.AddMedicinesActicity">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_MedicineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="العمر"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_CompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="اسم التحصين"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="20dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="20dp"
                android:entries="@array/blockhouses_place" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="20dp"
                android:entries="@array/blockhouses_type" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="20dp"
                android:entries="@array/blockhouses_way_dead" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="20dp"
                android:entries="@array/discovers_name" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="20dp" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_NotesBeforeBlockhouses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ملاحظات قبل التحصين "
                    android:inputType="text"
                    android:maxLines="2"
                    android:textSize="@dimen/_13ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_NotesAfterBockhouses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ملاحظات بعد التحصين "
                    android:inputType="text"
                    android:maxLines="2"
                    android:textSize="@dimen/_13ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="20dp"
                android:entries="@array/medicines_type" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_OnePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="سعر العبوة "
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center"
                android:text="الاجمالي : 1000"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|right"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_nav_complete_bg"
        android:padding="10dp"
        android:text="إضافة"
        android:textColor="#ffffff" />

</RelativeLayout>
